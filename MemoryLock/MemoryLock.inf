;
; MemoryLock.inf
;

[Version]
Signature="$WINDOWS NT$"
Class=System ; TODO: specify appropriate Class
ClassGuid={4d36e97d-e325-11ce-bfc1-08002be10318} ; TODO: specify appropriate ClassGuid
Provider=%ManufacturerName%
CatalogFile=MemoryLock.cat
DriverVer= ; TODO: set DriverVer in stampinf property pages
PnpLockdown=1

[DestinationDirs]
DefaultDestDir = 12
MemoryLock_Device_CoInstaller_CopyFiles = 11

[SourceDisksNames]
1 = %DiskName%,,,""

[SourceDisksFiles]
MemoryLock.sys  = 1,,
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll=1 ; make sure the number matches with SourceDisksNames

;*****************************************
; Install Section
;*****************************************

[Manufacturer]
%ManufacturerName%=Standard,NT$ARCH$

[Standard.NT$ARCH$]
%MemoryLock.DeviceDesc%=MemoryLock_Device, Root\MemoryLock ; TODO: edit hw-id

[MemoryLock_Device.NT]
CopyFiles=Drivers_Dir

[Drivers_Dir]
MemoryLock.sys

;-------------- Service installation
[MemoryLock_Device.NT.Services]
AddService = MemoryLock,%SPSVCINST_ASSOCSERVICE%, MemoryLock_Service_Inst

; -------------- MemoryLock driver install sections
[MemoryLock_Service_Inst]
DisplayName    = %MemoryLock.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\MemoryLock.sys

;
;--- MemoryLock_Device Coinstaller installation ------
;

[MemoryLock_Device.NT.CoInstallers]
AddReg=MemoryLock_Device_CoInstaller_AddReg
CopyFiles=MemoryLock_Device_CoInstaller_CopyFiles

[MemoryLock_Device_CoInstaller_AddReg]
HKR,,CoInstallers32,0x00010000, "WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll,WdfCoInstaller"

[MemoryLock_Device_CoInstaller_CopyFiles]
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll

[MemoryLock_Device.NT.Wdf]
KmdfService =  MemoryLock, MemoryLock_wdfsect
[MemoryLock_wdfsect]
KmdfLibraryVersion = $KMDFVERSION$

[Strings]
SPSVCINST_ASSOCSERVICE= 0x00000002
ManufacturerName="Invisible Things Lab"
DiskName = "MemoryLock Installation Disk"
MemoryLock.DeviceDesc = "MemoryLock Device"
MemoryLock.SVCDESC = "MemoryLock Service"
